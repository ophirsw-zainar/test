{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A binned scatter plot example showing aggregate counts per binned cell.",
  "width": 500,
  "height": 500,
  "padding": 5,
  "autosize": "pad",

  "data": [
    {
    "name": "NODES",
      "url" : "https://raw.githubusercontent.com/ophirsw-zainar/test/master/nodes_ground_truth.json"
    },
    {
      "name": "MEASURMENTS",
      "url" : "https://raw.githubusercontent.com/ophirsw-zainar/test/master/data.json",  
      
      "transform": [
       {
        "type": "aggregate",
        "groupby": ["node_source","node_destination"],
        "fields": ["signal_stength", "Distance"],
        "ops": [ "mean", "mean"],
        "as": ["signal_stength_mean", "Distance_mean"]
      }, 
      {
        "type": "lookup",
        "from": "NODES",
        "key": "node_name",
        "fields": ["node_source"],
        "values": ["x","y","node_name"],
        "as": ["node_source_pos_x","node_source_pos_y","node_name_src"],
        "default": "some label"
      },
       {
        "type": "lookup",
        "from": "NODES",
        "key": "node_name",
        "fields": ["node_destination"],
        "values": ["x","y","node_name"],
        "as": ["node_destination_pos_x","node_destination_pos_y","node_name_dest"],
        "default": "some label"
      }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": [0, 15],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "domain": [15, 30],
      "range": "height",
      "zero": false
    },
    {
      "name": "singal_strength",
      "type": "linear",
      "round": true,
      "nice": true,
      "domain": [0, 1000],
      "zero": false
    },
    {
      "name": "distance",
      "type": "linear",
      "round": true,
      "nice": true,
      "domain": [0, 10000],
      "zero": false
    }
  ],
"axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 10,
      "title": "meter"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "tickCount": 10,
      "title": "meter"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "NODES"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "x"},
          "y": {"scale": "y", "field": "y"},
          "size": {"scale": "x","value": 4},
          "shape": {"value": "triangle"},
          "strokeWidth": {"value": 2},
          "opacity": {"value": 1},
          "stroke": {"value": "#4682b4"},
          "fill": {"value": "#4682b4"},
          "tooltip" : {"field": "node_name"}
        }
      }
    },
    {
            "name": "test",
            "type": "line",
            "from": {"data": "MEASURMENTS"},
            "encode": {
              "update": {
                "x": {"scale": "x", "field": "node_source_pos_x"},
                "x2": {"scale": "x", "field": "node_destination_pos_x"},
                "y": {"scale": "y", "field": "node_source_pos_y"},
                "y2": {"scale": "y", "field": "node_destination_pos_y"},
                 "strokeWidth":  {"value": 1},
                "opacity": {"value": 1},
                "stroke": {"value": "#4682b4"}
              }
            }
    },
      
    {
      "type": "text",
      "name": "value-text",
      "from": {"data": "NODES"},
      "encode": {
        "update": {
          "x": {"scale": "x","field": "x"},
          "y": {"scale": "y","field": "y"},
          "text": {"field": "node_name"},
          "fill": {"value": "black"},
          "dx" :  {"value": -20},
          "dy" : {"value": -10}
        }
      }
    }
  ]
}